<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dirtybits.spotted.PersonActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kostoulla Kosti"
            android:id="@+id/textViewName"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/abc_background_cache_hint_selector_material_light"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/irodotou"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewWantedIcon"
                android:src="@drawable/ic_wanted_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wanted since 10/10/2005"
                android:id="@+id/textViewWanted"
                android:textColor="@color/abc_background_cache_hint_selector_material_light"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_location_white_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/textViewSpotted"
                android:layout_gravity="center_vertical|left"
                android:textColor="@color/abc_background_cache_hint_selector_material_light" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSpotted"
        android:src="@drawable/ic_location_on_black_24px1"
        android:background="@null"
        android:layout_alignTop="@+id/imageButtonMap"
        android:layout_alignParentEnd="true" />

   <!-- <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonMap"
        android:src="@drawable/ic_map_black_30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@null" />-->
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonMap"
        android:src="@drawable/ic_map_black_30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Η Ηροδότου Έφη (ημερ. γέννησης 04/05/1987) ενεπλάκη σε τροχαίο δυστύχημα στις 27/12/2007 συνέπεια του οποίου ήταν ένα πρόσωπο να χάσει τη ζωή του."
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp" />

</RelativeLayout>
